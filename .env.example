# Aviator Bot - Environment Configuration
# Copy this file to .env and update with your settings
# DO NOT commit .env to version control

# ============================================
# DISPLAY SETTINGS
# ============================================
DISPLAY=:99

# ============================================
# TESSERACT OCR
# ============================================
# Linux: /usr/bin/tesseract
# Windows: C:\Program Files\Tesseract-OCR\tesseract.exe
TESSERACT_PATH=/usr/bin/tesseract

# ============================================
# BOT OPERATION MODE
# ============================================
# Options: observation, dry_run, live
# - observation: Only collect data, no betting
# - dry_run: Simulate bets without real money
# - live: Real betting with actual money (use with caution!)
BOT_MODE=dry_run

# ============================================
# BETTING PARAMETERS
# ============================================
INITIAL_STAKE=25
MAX_STAKE=1000
STAKE_INCREASE_PERCENT=20
CASHOUT_DELAY=2.0

# ============================================
# SCREEN COORDINATES
# ============================================
# These are loaded from aviator_ml_config.json
# Configure them in the JSON file, not here

# ============================================
# DASHBOARD SETTINGS
# ============================================
FLASK_ENV=production
FLASK_APP=run_dashboard.py
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_DEBUG=False

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FILE=backend/bot_session.log

# ============================================
# MACHINE LEARNING
# ============================================
# Number of historical rounds to use for predictions
ML_HISTORY_LENGTH=100

# Minimum confidence threshold for betting signals
ML_CONFIDENCE_THRESHOLD=0.65

# ============================================
# DOCKER SETTINGS (for Docker deployment)
# ============================================
COMPOSE_PROJECT_NAME=aviator-bot
